<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <View
        android:id="@+id/_bg__search_____ek1"
        android:layout_width="322dp"
        android:layout_height="60dp"
        android:background="@drawable/_bg__search_____ek1_shape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/food_search"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@drawable/_bg__search_ek1_shape"
        android:hint="@string/food_search"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/_bg__search_____ek1"
        app:layout_constraintEnd_toEndOf="@+id/_bg__search_____ek1"
        app:layout_constraintStart_toStartOf="@+id/_bg__search_____ek1"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/union"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="20dp"
        android:contentDescription="@string/food_search"
        android:src="@drawable/union"
        app:layout_constraintBottom_toBottomOf="@+id/_bg__search_____ek1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/cancel_search"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="20dp"
        android:contentDescription="@string/food_search"
        android:src="@drawable/union_ek1"
        app:layout_constraintBottom_toBottomOf="@+id/_bg__search_____ek1"
        app:layout_constraintEnd_toEndOf="@+id/_bg__search_____ek1"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />


    <ImageButton

        android:id="@+id/add_food"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/food_search"
        android:src="@drawable/union_ek2"
        app:layout_constraintBottom_toBottomOf="@+id/_bg__search_____ek1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/_bg__search_____ek1"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/food_search" />


    <View
        android:id="@+id/cancel"
        android:layout_width="191dp"
        android:layout_height="48dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/_bg__secondary_button_ek1_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/__title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="@color/_bg__android_large___1_ek2_color"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/cancel"
        app:layout_constraintEnd_toEndOf="@+id/cancel"
        app:layout_constraintStart_toStartOf="@+id/cancel"
        app:layout_constraintTop_toTopOf="@+id/cancel" />


</androidx.constraintlayout.widget.ConstraintLayout>